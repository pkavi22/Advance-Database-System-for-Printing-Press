@page
@model nma_graphics.Pages.Customers.CreateModel
@{
}

<br />
<h2>New Customer</h2>

<form class="form card card-body" method="post">
@if(Model.errorMessage.Length > 0)
{
    <div class="row mb-3 alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>    
        <button type="button" class="btn-close" data-bs-dismiss="alert" arial-label="Close"></button>
    </div>
}   

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.customerInfo.name"/>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Contact Number</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="contactno" value="@Model.customerInfo.contactno" />
        </div>
    </div> 
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Addressr</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="@Model.customerInfo.address" />
        </div>
    </div >
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.customerInfo.email"/>
        </div>
    </div>
   

    @if(Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
        <a class="btn btn-outline-primary" href="/Customers/Index" role="button">Cancel </a>
        </div>
    </div>
</form>