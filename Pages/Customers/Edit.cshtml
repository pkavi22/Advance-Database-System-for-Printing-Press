@page
@model nma_graphics.Pages.Customers.EditModel
@{
}
<br />
<h2>Edit Customer</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" arial-label="Close"></button>
    </div>
}
<form class="form" method="post">
    <input type="hidden" name="id" value="@Model.customerInfo.id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.customerInfo.name" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Contact Number</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="contactno" value="@Model.customerInfo.contactno" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Addressr</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="address" value="@Model.customerInfo.address" />
            </div>
        </div>
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.customerInfo.email" />
        </div>
    </div>


    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Customers" role="button">Cancel </a>
        </div>
    </div>
</form>